# .env.example
# Этот файл является шаблоном для переменных окружения.
# Скопируйте его в .env и заполните своими значениями.
# Не добавляйте .env в систему контроля версий.

# --- HH.ru API Credentials ---
HH_CLIENT_ID=""
HH_CLIENT_SECRET=""
HH_REDIRECT_URI="http://127.0.0.1:8080/auth/hh/callback"

# Путь к SQLite БД (по умолчанию app.sqlite3 в корне)
# WEBAPP_DB_PATH="app.sqlite3"

# --- Local Callback Server (demo-only) ---
# Оставлено для локальных демонстраций одноразового флоу
# CALLBACK_HOST="127.0.0.1"
# CALLBACK_PORT=8080

# --- LLM Features Settings ---
# Настройки LLM-фич с префиксами для каждой фичи

# Cover Letter (Сопроводительные письма)
COVER_LETTER_LANGUAGE="ru"
COVER_LETTER_PROMPT_VERSION="cover_letter.v2"
COVER_LETTER_TEMPERATURE=0.4
COVER_LETTER_QUALITY_CHECKS=false
# COVER_LETTER_MODEL_NAME="gpt-4o-mini-2024-07-18"

# Gap Analyzer (Анализ пробелов в навыках) - пример будущей фичи
# GAP_ANALYZER_LANGUAGE="ru"
# GAP_ANALYZER_PROMPT_VERSION="v1"
# GAP_ANALYZER_TEMPERATURE=0.2
# GAP_ANALYZER_QUALITY_CHECKS=true
GAP_ANALYZER_MODEL_NAME="gpt-5-mini-2025-08-07"  # Модель только для gap_analyzer

# Interview Checklist (Чеклист для собеседований) - пример будущей фичи  
# INTERVIEW_CHECKLIST_LANGUAGE="ru"
# INTERVIEW_CHECKLIST_PROMPT_VERSION="v1"
# INTERVIEW_CHECKLIST_TEMPERATURE=0.1
# INTERVIEW_CHECKLIST_QUALITY_CHECKS=true

# Interview Simulation (Симуляция интервью) - пример будущей фичи
# INTERVIEW_SIMULATION_LANGUAGE="ru" 
# INTERVIEW_SIMULATION_PROMPT_VERSION="v1"
# INTERVIEW_SIMULATION_TEMPERATURE=0.7
# INTERVIEW_SIMULATION_QUALITY_CHECKS=false

# --- LLM (OpenAI) ---
# Ключ и (опционально) модель для OpenAI API.
OPENAI_API_KEY=""
# OPENAI_MODEL_NAME="gpt-4o-mini-2024-07-18"

# --- Auth (MVP) ---
# Настройки cookies/TTL для встроенной аутентификации приложения
# В проде рекомендуется: AUTH_COOKIE_SECURE=true, AUTH_COOKIE_SAMESITE=strict|none (в зависимости от домена)
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_SAMESITE=lax
AUTH_SESSION_TTL_SEC=604800
