{
  // === ОСНОВНЫЕ ПАРАМЕТРЫ СИМУЛЯЦИИ ===
  "target_rounds": 5,                    // Количество раундов диалога (3-7): 3=короткое, 5=стандартное, 7=детальное
  "difficulty_level": "medium",          // Уровень сложности: "easy"=junior, "medium"=middle, "hard"=senior+
  
  // === ТИПЫ ВОПРОСОВ ===
  "include_behavioral": true,            // Включать поведенческие вопросы (STAR методика)
  "include_technical": true,             // Включать технические вопросы по резюме/вакансии
  "include_leadership": null,            // Вопросы на лидерство: null=автоопределение, true=включать, false=исключить
  
  // === ФОКУС ИНТЕРВЬЮ ===
  "focus_areas": null,                   // Приоритетные области для оценки (null=автоопределение)
  
  // === СТИЛЬ ИНТЕРВЬЮ ===
  "hr_personality": "neutral",           // Стиль HR: "supportive"=поддерживающий, "neutral"=сбалансированный, "challenging"=строгий
  "candidate_confidence": "medium",      // Уверенность кандидата: "low"=неуверенный, "medium"=сбалансированный, "high"=уверенный
  
  // === ТЕХНИЧЕСКИЕ НАСТРОЙКИ ГЕНЕРАЦИИ ===
  "temperature_hr": 0.7,                // Креативность вопросов HR (0.0-1.0): 0.5=предсказуемые, 0.7=сбалансированные, 0.9=креативные
  "temperature_candidate": 0.8,         // Креативность ответов кандидата (0.0-1.0): 0.6=шаблонные, 0.8=естественные, 1.0=креативные
  "max_tokens_per_message": 2500,       // Максимум токенов на сообщение (500-4000): 1500=короткие, 2500=детальные, 4000=подробные
  
  // === КОЛБЭКИ И МОНИТОРИНГ ===
  "enable_progress_callbacks": false,    // Показывать прогресс выполнения
  "log_detailed_prompts": false,         // Логировать промпты для отладки
  
  // === БАЗОВЫЕ LLM НАСТРОЙКИ ===
  "language": "Russian",                // Язык интервью: "Russian" или "English"
  "temperature": 0.7,                   // Основная температура (переопределяет базовую)
  "max_tokens": 2500,                   // Основной лимит токенов
  "prompt_version": "v1.0",             // Версия промпта
  
  // === ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ ===
  "quality_checks": false,              // Включить проверки качества
  "extra_context": {}                   // Дополнительный контекст (компания, команда, проект)
}